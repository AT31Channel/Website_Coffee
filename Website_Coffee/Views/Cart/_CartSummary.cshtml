@model Website_Coffee.ViewModels.CheckoutViewModel

<div class="card">
    <div class="card-header bg-white">
        <h5 class="card-title mb-0">Đơn hàng của bạn</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table mb-0">
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(item.Product.ImageUrl))
                                    {
                                        <img src="@item.Product.ImageUrl" alt="@item.Product.Name"
                                             class="img-thumbnail me-2" style="width: 50px; height: 50px; object-fit: cover;">
                                    }
                                    <div>
                                        <div>@item.Product.Name</div>
                                        <small class="text-muted">@item.Quantity x @item.Product.Price.ToString("C0")</small>
                                    </div>
                                </div>
                            </td>
                            <td class="text-end">@((item.Quantity * item.Product.Price).ToString("C0"))</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td class="fw-bold">Tổng cộng:</td>
                        <td class="text-end fw-bold">@Model.Total.ToString("C0")</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .table th, .table td {
        padding: 1rem;
    }

    .btn i {
        margin-right: 0.5rem;
    }

    .required::after {
        content: " *";
        color: red;
    }

    .validation-summary-errors ul {
        margin-bottom: 0;
        padding-left: 1rem;
    }

    .form-control.input-validation-error {
        border-color: #dc3545;
    }

    .form-control.input-validation-error:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
    }
</style>
